<script src="https://www.paypal.com/sdk/js?client-id=AUfzWo-CUAjDPt1VcmmWZzjc4WOrZD1qXt_ADEeLuWpyFx0WvTdnSZWdJooY211hBPO5h-X1tQOQYgn4&currency=USD" data-sdk-integration-source="button-factory"></script>
<script>
    paypal.Buttons({
        style: {
            shape: 'rect',
            color: 'gold',
            layout: 'vertical',
            label: 'paypal',
            
        },
        createOrder: function(data, actions) {
            return actions.order.create({
                purchase_units: [{
                    amount: {
                        value: '0.01'
                    }
                }]
            });
        },
        onApprove: function(data, actions) {
            // console.log(data)
            // console.log(action)
            return actions.order.capture().then(function(details) {
              
              console.log(details)
                alert('Transaction completed by ' + details.payer.name.given_name + '!');
            });
        }
    }).render('#paypal-button-container');
</script>

