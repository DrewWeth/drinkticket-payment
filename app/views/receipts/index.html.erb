<p id="notice"><%= notice %></p>

<h1>Receipts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Status</th>
      <th>User email</th>
      <th>Amount</th>
      <th>Payer</th>
      <th>Pay source</th>
      <th>Pay source status</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipts.each do |receipt| %>
      <tr>
        <td><%= receipt.user_id %></td>
        <td><%= receipt.status %></td>
        <td><%= receipt.user_email %></td>
        <td><%= receipt.amount %></td>
        <td><%= receipt.payer_id %></td>
        <td><%= receipt.pay_source %></td>
        <td><%= receipt.pay_source_status %></td>
        <td><%= receipt.data %></td>
        <td><%= link_to 'Show', receipt %></td>
        <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
        <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Receipt', new_receipt_path %>
